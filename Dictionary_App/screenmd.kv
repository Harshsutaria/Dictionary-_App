<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "left.jpg"

    MDLabel:
        text: "KivyMD library"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "harshsutaria25@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:

        MDList:

            OneLineListItem:
                text: "Screen 1"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 1"

            OneLineListItem:
                text: "Translate"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 2"
            OneLineListItem:
                text: "antononym synonym"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 3"

            OneLineListItem:
                text: "Favourites"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 4"


            OneLineListItem:
                text: "Grammar checking"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 5"
Screen:

    MDToolbar:
        id: toolbar
        background_color: app.theme_cls.primary_dark
        pos_hint: {"top": 1}
        elevation: 10
        title: "English Dictionary"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDBottomAppBar:
        MDToolbar:
            title : 'Pam'
            icon : "microphone"
            mode : "end"
            type: "bottom"
            on_action_button:  app.lets_chat()
            left_action_items: [["chat",lambda x: app.intro()]]
            elevation : 8


    NavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager


            Screen:
                name: "scr 1"


                namee:namee


                MDLabel:
                    id:top
                    text: "Please enter a word to find its meaning"
                    pos_hint : {'center_x':0.5,'center_y':0.8}
                    font_style: "Caption"
                    font_style:"H6"
                    theme_text_color:'Custom'
                    halign : "center"
                    size_hint_y: None

                MDTextField:
                    id:namee
                    hint_text : "Enter a Word"
                    mode:"rectangle"
                    pos_hint : {'center_x':0.5 ,'center_y':0.6}
                    size_hint_x : None
                    width: 250

                MDIconButton:
                    icon:'microphone'
                    pos_hint : {'center_x':0.03 ,'center_y':0.6}
                    size_hint_x : None
                    on_release:
                        app.listen()
                MDIconButton:
                    icon:'search-web'
                    pos_hint : {'center_x':0.9 ,'center_y':0.6}

                    on_release:
                        app.submit()
                MDIconButton:
                    icon:'speaker'
                    pos_hint : {'center_x':0.5 ,'center_y':0.5}

                    on_release:
                        app.pronounse()
                MDIconButton:
                    icon:'plus'
                    pos_hint : {'center_x':0.4 ,'center_y':0.5}
                MDIconButton:
                    icon:'heart'
                    pos_hint : {'center_x':0.6 ,'center_y':0.5}

                    on_release:
                        app.favourites()
                MDLabel:
                    id : mean
                    text: ""
                    pos_hint : {'center_x':0.5,'center_y':0.3}
                    font_style: "Caption"
                    font_style:"H6"
                    theme_text_color:'Custom'
                    halign : "center"
                    size_hint_y: None


            Screen:
                name: "scr 2"

                MDLabel:
                    id : trans
                    text: "Please enter a Sentece!"
                    halign: "center"
                    pos_hint : {'center_x':0.5 ,'center_y':0.8}
                    font_style: "Caption"
                    font_style:"H6"
                    theme_text_color:'Custom'
                MDTextField:
                    mode : "rectangle"
                    hint_text : "Enter a Word"
                    id:translate
                    pos_hint : {'center_x':0.5 ,'center_y':0.6}
                    size_hint_x : None
                    width: 250

                MDIconButton:
                    icon:'speaker'
                    pos_hint : {'center_x':0.9 ,'center_y':0.6}


                MDRectangleFlatButton:
                    text : "Espanyol"
                    pos_hint : {'center_x':0.3 ,'center_y':0.4}
                    on_release:
                        app.spain()

                MDRectangleFlatButton:
                    text : "french"
                    pos_hint : {'center_x':0.7 ,'center_y':0.4}
                    on_release:
                        app.french()

                MDRectangleFlatButton:
                    text : "german"
                    pos_hint : {'center_x':0.3 ,'center_y':0.3}
                    on_release:
                        app.german()

                MDRectangleFlatButton:
                    text : "japenese"
                    pos_hint : {'center_x':0.7 ,'center_y':0.3}
                    on_release:
                        app.japan()



            Screen:
                name: "scr 3"

                MDLabel:
                    id : antosynom
                    text: "pls enter a word to find its antononyms synonyms"
                    halign: "center"
                    pos_hint : {'center_x':0.5 ,'center_y':0.8}
                    font_style: "Caption"
                    font_style:"H6"
                    theme_text_color:'Custom'

                MDTextField:
                    id:antosyno
                    hint_text : "Enter a Word"
                    mode:"rectangle"
                    pos_hint : {'center_x':0.5 ,'center_y':0.6}
                    size_hint_x : None
                    width: 200

                MDIconButton:
                    icon:'speaker'
                    pos_hint : {'center_x':0.8,'center_y':0.6}

                MDRectangleFlatButton:
                    text : "synonymsss"
                    pos_hint : {'center_x':0.25 ,'center_y':0.4}
                    on_release:
                        app.syno()
                MDRectangleFlatButton:
                    text : "antononyms"
                    pos_hint : {'center_x':0.7 ,'center_y':0.4}
                    on_release:
                        app.anto()
            Screen:
                name: 'scr 4'


                ScrollView:
                    MDList:
                        id: container


            Screen:
                name: 'scr 5'
                MDLabel:
                    id : let
                    text : "Lets Check Grammar "
                    halign : "center"
                    pos_hint : {'center_x':0.5 ,'center_y':0.8}
                    font_style: "Caption"
                    font_style:"H6"
                    theme_text_color:'Custom'
                MDTextField:
                    hint_text : "Enter a Sentense"
                    id:gramm
                    mode:"rectangle"
                    pos_hint : {'center_x':0.5 ,'center_y':0.6}
                    size_hint_x : None
                    width: 200

                MDIconButton:
                    icon:'speaker'
                    pos_hint : {'center_x':0.8 ,'center_y':0.6}

                MDRectangleFlatButton:
                    text : "Check"
                    pos_hint : {'center_x':0.5 ,'center_y':0.4}
                    on_release:
                        app.check_grammar()




        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
                id: content_drawer
